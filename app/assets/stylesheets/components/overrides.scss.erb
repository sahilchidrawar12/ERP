@import 'colors';
@import 'compass';

h1{
  font-size: 30px;
  small{
    font-size: 18px;
  }
}
h2{
  font-size: 26px
  small{
    font-size: 18px;
  }
}
h3{
  font-size: 22px;
  small{
    font-size: 14px;
  }
}
h4{
  font-size: 18px;
  small{
    font-size: 10px;
  }
}

a:hover{
  text-decoration: none;
}

.pagination{
  margin: 15px 0px;
  > ul > li > a{
    //@includebackground-image(linear-gradient(lighten($grayLight, 14%), $grayLighter ) )
    padding: 8px 18px;
    font-size: 110%;
  }
  ul > li:first-child > a{
    @include border-left-radius(2px);
  }
  ul > li:last-child > a{
    @include border-right-radius(2px);
  }
}

// Select2
.select2-container.span10{
  margin: 0px;
}

.select2-highlighted{
  .gray{
    color: white;
  }
}
.select2-container .select2-choice {
  @include border-radius(2px);
  div b {
    background: none;
  }
  div b:before {
    font-family: fontello;
    content: '\e81c';
  }
}

////////////////////////////////////////
// Bootstrap
.btn{
  @include border-radius(2px)
}

.btn-group > .btn:first-child{
  @include border-left-radius(2px)
}
.btn-group > .btn:last-child{
  @include border-right-radius(2px)
}

select,
textarea,
input[type="text"],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"],
.uneditable-input{
  @include border-radius(2px)
}

.btn{
  img{
    width: 16px;
    height: 16px;
  }
}

.form-inline label{
  margin-right: 5px;
}

.nav-collapse{
  -webkit-transform: none !important;
  z-index: 1 !important;
}

a.dark:hover{
  text-decoration: none;
}

code{
  font: inherit;
  padding: 0px 1px;
  display: inline-block;
  min-width: 8px;
  min-height: 20px;
  vertical-align: bottom;
}
.btn-info.active{
  color: $yellowLight;
}
.minicolors-swatch{
  width: 28px;
  height: 28px;
}


@media (max-width: 767px){
  span.visible-phone,
  i.visible-phone{
    display: inline !important;
  }
}

// jquery mincolors
.minicolors-swatch {
  background: url(<%= asset_path 'jquery.minicolors.png' %>) -80px 0;
}
.minicolors .minicolors-grid {
  background: url(<%= asset_path 'jquery.minicolors.png' %>) -120px 0;
}
.minicolors-slider-saturation .minicolors-grid-inner {
	background: url(<%= asset_path 'jquery.minicolors.png' %>) -270px 0;
}
.minicolors-slider,
.minicolors-opacity-slider {
	position: absolute;
	top: 1px;
	left: 152px;
	width: 20px;
	height: 150px;
	background: white url(<%= asset_path 'jquery.minicolors.png' %>) 0 0;
	cursor: crosshair;
}
