    = link_to loan.contact, loan.contact, title: 'Contacto'
    .clearfix
    = lo loan.date
    %strong(title='Estado')= loan.state_tag
  .span3
    %span.muted Intereses
    = ntc loan.interests
    = currency_label loan.currency
