    = loan.creator_label
    = loan.updater_label
    = loan.due_date_tag
    .clearfix
    %i.icon-file.muted(title='Descripci√≥n')
    = loan.description
  .span3
    .span6.r
      = ntc loan.total
      = currency_label loan.currency
