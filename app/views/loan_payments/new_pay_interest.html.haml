%h4.title Pagar intereses

#loan(ng-controller='PaymentController')
  = simple_form_for @payment, url: pay_interest_loan_payment_path(@loan.id),
    html: { id: 'loan-payment-form' } do |f|
    = bonsai_form_error(f)
    = f.hidden_field :account_id, id: 'account_id'

    %input(type='hidden' id='accounts' data-accounts='#{Accounts::Query.new.expense_payment_options(@payment.loan).to_json}')
    = hidden_field_tag 'base_currency', @payment.loan_currency, 'ng-model' => 'base_currency', 'initial' => true

    = render 'loan_payments/form', f: f, loan: @loan

    .form-actions
      = f.submit 'Pagar intereses', class: 'btn b btn-success'
