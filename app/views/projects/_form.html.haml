= simple_form_for(@project, html: {id: 'project-form'}) do |f|
  = bonsai_form_error(f)
  .row-fluid
    .span4
      = f.input :name, label: 'Nombre', input_htm: {size: 28}
    .span2.form-inline
      = f.input :active, label: 'Activo'
    .span3
      = f.input :date_start, as: :datepicker, label: 'Fecha inicio', include_blank: true
    .span3
      = f.input :date_end, as: :datepicker, label: 'Fecha fin', include_blank: true
  .row-fluid
    .span6
      = f.input :description, label: "Descripci√≥n", input_html: {cols: 45, rows: 5}

  .form-actions
    = f.submit 'Salvar', class: 'btn btn-primary b'
