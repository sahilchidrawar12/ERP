.search
  = form_tag '/expenses', method: 'get', class: 'search-expenses' do
    .row-fluid
      .span6
        .input
          = text_field_tag :search, params[:search], placeholder: t('controllers.expenses.index.search.contact_expense'), autocomplete: 'off'
      .span6
        %span.datepicker
          = hidden_field_tag :date_start, params[:date_start]
          %input.datepicker(type="text" size="10" placeholder="#{ t('controllers.expenses.index.search.date_start') }")
        %span.datepicker
          = hidden_field_tag :date_end, params[:date_end]
          %input.datepicker(type="text" size="10" placeholder="#{ t('controllers.expenses.index.search.date_end') }")

    .row-fluid
      .span6.form-inline
        %label(for="state")= t('controllers.expenses.index.search.state')
        = select_tag :state, state_search_options(params[:state]), include_blank: true
        = submit_tag t('common.search'), class: 'btn'
