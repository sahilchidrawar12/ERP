- content_for :links do
  %ul.breadcrumbs
    %li #{link_to "Unidades de medida", units_path}
  

.row-fluid
  .span8
    %h1= @unit.to_s
  .span4.r
    .btn-group
      = link_to icon_new_text, new_unit_path, class: 'btn'
      = link_to icon_edit_text, edit_unit_path(@unit), class: 'btn'
      = link_to icon_delete_text, @unit, class: 'btn', method: :destroy, confirm: 'Esta segur@ de borrar la Unidad de medida?'

