<%%= simple_form_for(@<%= singular_name %>) do |f| %>

  <%%= bonsai_error(f) %>

  <div class="inputs">
  <%- attributes.each do |attribute| -%>
    <%%= f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %> %>
  <%- end -%>
  </div>

  <div class="actions clear">
    <%%= f.submit 'Salvar' %>
  </div>
<%% end %>
