<h1><%= plural_table_name %></h1>

<%%= link_to 'New <%= human_name %>', new_<%= singular_table_name %>_path, :class => 'new' %>

<table class="decorated nwl">
  <tr>
<% for attribute in attributes -%>
    <th><%= attribute.human_name %></th>
<% end -%>
    <th></th>
  </tr>

<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
    <% @first = true -%>
<% for attribute in attributes -%>
  <% if @first -%>
    <td><%%= link_to <%= singular_table_name %>.<%= attribute.name %>, singular_table_name %></td>
  <% else -%>
    <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
  <% end -%>
  <% @first = false -%>
<% end -%>
    <td><%%= bonsai_links(<%= singular_table_name %>) %></td>
  </tr>
<%% end %>
</table>

